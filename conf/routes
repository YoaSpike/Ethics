# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

GET     /pdftest                    controllers.PDF.pdftest()
GET     /emailtest                  controllers.Application.emailtest()

GET     /application/:id/           controllers.EthicsApplication.application_summary(id: Long)
GET     /application/:id/section0   controllers.application.Section0.get(id: Long)
GET     /application/:id/section1   controllers.application.Section1.get(id: Long)
GET     /application/:id/section2   controllers.application.Section2.get(id: Long)
GET     /application/:id/section3   controllers.application.Section3.get(id: Long)
GET     /application/:id/section4   controllers.application.Section4.get(id: Long)
GET     /application/:id/section5   controllers.application.Section5.get(id: Long)
GET     /application/:id/section6   controllers.application.Section6.get(id: Long)
GET     /application/:id/section7   controllers.application.Section7.get(id: Long)

POST    /application/:id/section0   controllers.application.Section0.post(id: Long)
POST    /application/:id/section1   controllers.application.Section1.post(id: Long)
POST    /application/:id/section2   controllers.application.Section2.post(id: Long)
POST    /application/:id/section3   controllers.application.Section3.post(id: Long)
POST    /application/:id/section4   controllers.application.Section4.post(id: Long)
POST    /application/:id/section5   controllers.application.Section5.post(id: Long)
POST    /application/:id/section6   controllers.application.Section6.post(id: Long)
POST    /application/:id/section7   controllers.application.Section7.post(id: Long)


GET     /forms                      controllers.Forms.index()
GET     /viewall                    controllers.Forms.viewall()

GET     /accounts/add_user          controllers.Accounts.add_user()
GET     /accounts/login             controllers.Accounts.login()
GET     /accounts/logout            controllers.Accounts.logout()
GET     /accounts/user_list         controllers.Accounts.user_list()
POST    /accounts/add_user          controllers.Accounts.add_user()
POST    /accounts/login             controllers.Accounts.login_post()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
