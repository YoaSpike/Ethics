# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /ethics_triage              controllers.Application.ethics_triage()
POST    /ethics_triage              controllers.Application.ethics_triage_post()
GET     /general_information        controllers.Application.general_information()
POST    /hello                      controllers.Application.sayHello()

GET     /add_user                   controllers.Accounts.add_user()
GET     /login                      controllers.Accounts.login()
GET     /logout                     controllers.Accounts.logout()
GET     /user_list                  controllers.Accounts.user_list()
POST    /add_user                   controllers.Accounts.add_user()
POST    /login                      controllers.Accounts.login_post()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
