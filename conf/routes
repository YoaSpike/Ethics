# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

GET     /pdftest                    controllers.PDF.pdftest()
GET     /emailtest                  controllers.Application.emailtest()
GET     /demos/:demo_name           controllers.Application.demo(demo_name: String)

GET     /application/:id/           controllers.EthicsApplication.application_summary(id: Long)
GET     /application/:id/ethics_triage  controllers.EthicsApplication.ethics_triage(id: Long)
GET     /application/:id/section1   controllers.EthicsApplication.section1(id: Long)
GET     /application/:id/section2   controllers.EthicsApplication.section2(id: Long)

GET     /forms                      controllers.Forms.index()
GET     /viewall                    controllers.Forms.viewall()
GET     /ethics_triage              controllers.Forms.ethics_triage()
POST    /ethics_triage              controllers.Forms.ethics_triage_post()
GET     /general_information        controllers.Forms.general_information()
POST    /general_information        controllers.Forms.general_information_post()
GET     /themes_in_research_ethics  controllers.Forms.themes_in_research_ethics()
POST    /themes_in_research_ethics_post  controllers.Forms.themes_in_research_ethics_post()

POST    /hello                      controllers.Application.sayHello()

GET     /add_user                   controllers.Accounts.add_user()
GET     /login                      controllers.Accounts.login()
GET     /logout                     controllers.Accounts.logout()
GET     /user_list                  controllers.Accounts.user_list()
POST    /add_user                   controllers.Accounts.add_user()
POST    /login                      controllers.Accounts.login_post()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
